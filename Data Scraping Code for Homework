import requests
import pandas as pd

# Set the API endpoint
url = "https://data.ny.gov/resource/4y8j-9pkd.json"

# Set the query parameters
query_params = {
    "$select": "agency, agency_name, station_name, line, artist_first_name, artist_last_name, art_title, art_year, art_material, art_description, art_image_link"
}

# Make the API request and get the response
response = requests.get(url, params=query_params)
response_json = response.json()

# Convert the JSON response to a pandas dataframe
df = pd.DataFrame(response_json)

# Save the dataframe as a CSV file
df.to_csv("arts_for_transit.csv", index=False)
